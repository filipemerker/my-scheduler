// Prisma schema for MongoDB
// learn more: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Kanban board - stores the order of swimlanes
model Kanban {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  swimlaneOrder  String[] @db.ObjectId
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

// Swimlane - a column in the kanban board
model Swimlane {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  ideaItemOrder String[] @db.ObjectId
  ideas         Idea[]
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

// Idea - an item within a swimlane
model Idea {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  swimlaneId  String   @db.ObjectId
  swimlane    Swimlane @relation(fields: [swimlaneId], references: [id], onDelete: Cascade)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
